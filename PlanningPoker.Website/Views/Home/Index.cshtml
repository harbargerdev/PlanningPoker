@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Planning Poker</h1>
</div>

<form id="gameMasterForm" action="/Home/GameMasterStart">
    <table style="width: 95%">
        <tr>
            <td style="width: 20%"><label for="playerName">Game Master Name:</label></td>
            <td><input type="text" id="playerName" name="playerName" /></td>
        </tr>
        <tr>
            <td><label for="gameName">Game Title:</label></td>
            <td><input type="text" id="gameName" name="gameName" /></td>
        </tr>
        <tr>
            <td><input type="submit" id="submitButton" name="submitButton" value="Start Game!" /></td>
        </tr>
    </table>
</form>