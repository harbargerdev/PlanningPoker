@{
    ViewData["Title"] = "Player Start";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Planning Poker</h1>
    <span>
        Welcome to Planning Poker by <a href="http://www.harbargerdev.com/">harbargerdev</a>. Go ahead and enter your name and
        select your team role. All votes are anonymous, so don't worry, your secrets are safe with us.
    </span>
</div>

<form action="/Home/PlayerCreation">
    <table>
        <tr>
            <td style="width: 20%"><label for="playerName">Name:</label></td>
            <td><input type="text" id="playerName" name="playerName" /></td>
        </tr>
        <tr>
            <td><label for="playerType">Role:</label></td>
            <td>
                @Html.RadioButton("Role", "Developer") <span>Developer</span>
                @Html.RadioButton("Role", "Tester") <span>Tester</span>
            </td>
        </tr>
        <tr>
            <td><input type="submit" id="submit" name="submit" value="Join!" /></td>
            <td><input type="text" name="gameId" value="@ViewBag.GameId" style="display:none" /></td>            
        </tr>
    </table>
</form>