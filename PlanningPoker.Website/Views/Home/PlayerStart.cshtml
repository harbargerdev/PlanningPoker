@{
    ViewData["Title"] = "Player Start";
}

<h1>Welcome to Planning Poker</h1>

<form>
    <table>
        <tr>
            <td style="width: 20%"><label for="playerName">Name:</label></td>
            <td><input type="text" id="playerName" name="playerName" /></td>
        </tr>
        <tr>
            <td><label for="playerType">Role:</label></td>
            <td>
                <input type="radio" id="developerRole" name="developerRole" /><br/>
                <input type="radio" id="testerRole" name="testerRole" />
            </td>
        </tr>
        <tr>
            <td><input type="submit" id="submit" name="Join!" /></td>
            <td></td>
        </tr>
    </table>
</form>